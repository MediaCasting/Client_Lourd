<UserControl x:Class="MegaCastingV2.WPF.View.ViewJob"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaCastingV2.WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="76"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <TextBlock 
                FontFamily = "Times New Roman"
                Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                x:Name="Title"
                TextAlignment="Center"
                VerticalAlignment="Center" 
                Text="Métiers"></TextBlock>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="LightGray">
                    <materialDesign:ColorZone
                    Mode="Standard"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="8 4 8 4"
                    CornerRadius="2"
                    Panel.ZIndex="1"
                    Margin="10 0"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBox
                                Grid.Column="1"
                                Margin="8 0 0 0"
                                materialDesign:HintAssist.Hint="Recherche ..."
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                BorderThickness="0"
                                MinWidth="130"
                                VerticalAlignment="Center" />
                        </Grid>
                    </materialDesign:ColorZone>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="ListBoxJob"  
                        Grid.Row="1" 
                        Grid.Column="0" 
                        Background="White" 
                        ItemsSource="{Binding Jobs}"
                        DisplayMemberPath="Name" 
                        SelectedItem="{Binding SelectedJob}"></ListBox>

                    <Grid Grid.Column="1" Background="LightGray"/>


                </Grid>
                

            </Grid>
            <Grid Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <ComboBox Grid.Row="0" x:Name="ComboBoxJob" ItemsSource="{Binding DomainJobs}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedJob.DomainJob}" materialDesign:HintAssist.Hint="Secteur d'activité" Margin="0,0,0,1" VerticalAlignment="Bottom"/>
                    </Grid>
                    <Grid Grid.Row="3">
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameJob" Text="{Binding SelectedJob.Name}" materialDesign:HintAssist.Hint="Nom :"></TextBox>
                    </Grid>
                    
                    
                </Grid>
                <Grid Grid.Column="3">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1" >
                        <Grid.RowDefinitions>

                            <RowDefinition Height="*"/>
                            <RowDefinition Height="59"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="59"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="59"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="59"/>
                            <RowDefinition Height="10"/>

                        </Grid.RowDefinitions>
                        <!-- #region Gestionnaire de boutons-->

                        <!-- Bouton Insertion -->
                        <Button 
                
                        Grid.Row="1" 
                        Background="LightGreen"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="150"
                        Height="40"
                        Name="ButtonManageInsert"
                        Click="ButtonManageInsert_Click" Grid.ColumnSpan="4">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Label Foreground="White" Content="Nouveau"/>
                            </StackPanel>

                        </Button>
                        <!-- Bouton Suppresion -->
                        <Button 
                
                        Grid.Row="3" 
                        Background="Red"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="150"
                        Height="40"
                        Name="ButtonManageDelete"
                        Click="ButtonManageDelete_Click" Grid.ColumnSpan="4">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Label Foreground="White" Content="Supprimer"/>
                            </StackPanel>

                        </Button>
                        
                        <!-- Bouton Réinitialiser -->
                        <Button 
                
                        Grid.Row="5" 
                        Background="BlueViolet"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="150"
                        Height="40"
                        Name="ButtonManageReset"
                        Click="ButtonManageReset_Click">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Label Foreground="White" Content="Réinitialiser"/>
                            </StackPanel>

                        </Button>
                        <!-- #endregion-->
                    </Grid>

                </Grid>




            </Grid>
        </Grid>
    </Grid>
</UserControl>
